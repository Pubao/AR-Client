- let profiles = profile;
- let company = profile['career']['company'];
doctype html
html
	head
		title Leem
		meta(http-equiv='content-type' content='text/html; charset=utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=Edge')
		meta(name='viewport' content='width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no')
		link(rel='stylesheet' href='/css/fontawesome/all.min.css')
		link(rel='stylesheet' href='/css/adminLTE/adminlte.css')
	
	body(class='layout-top-nav dark-mode')
		div(class='wrapper')
			nav(class='main-header navbar navbar-expand navbar-dark')
				div(class='container')
					div(class='collapse navbar-collapse order-3' id='navbarCollapse')
						ul(class='navbar-nav')
							li(class='nav-item')
								a(class='nav-link' href='javascript:alert("준비중")') 여행정보
							li(class='nav-item')
								a(class='nav-link' href='/loan') 복리계산기
			div(class='content-wrapper')
				div(class='content mt-1')
					div(class='container')
						div(class='row')
							div(class='col-md-4')
								div(class='card card-primary card-outline')
									div(class='card-body box-profile')
										div(class='text-center')
											img(class='profile-user-img img-fluid img-circle' src='/image/profile.png', alt='')
										h3(class='profile-username text-center') #{profiles.name}
										p(class='text-muted text-center') #{profiles.job}
										hr(style='border-top: 1px solid #6c757d;')
										strong
											i(class='fas fa-book mr-1')
											='학력'
										p(class='text-muted pl-3') #{profiles.education}
										hr(style='border-top: 1px solid #6c757d;')
										strong
											i(class='fas fa-pencil-alt mr-1')
											='Skills'
										p(class='text-muted pl-3') #{profiles.skills}
										hr(style='border-top: 1px solid #6c757d;')
										strong
											i(class='fa-regular fa-building mr-1')
											='경력'
										p(class='text-muted pl-3') !{profiles.career.history}
										hr(style='border-top: 1px solid #6c757d;')
										strong
											i(class='far fa-light fa-envelope mr-1')
											='E-Mail'
										p(class='text-muted pl-3') !{profiles.email}
							div(class='col-md-8')
								div(class='card')
									div(class='card-header p-2')
										ul(class='nav nav-pills')
											- for(var i=0; i < company.length; i++)
												- var active = i==0?'active':''
													li(class='nav-item')
														a(class='nav-link '+active href='#'+company[i].id data-toggle='tab') !{company[i].name}
									div(class='card-body')
										div(class='tab-content')
											- for(var i=0; i < company.length; i++)
												- var active = i==0?'active':''
													div(class='tab-pane '+active id=company[i].id)
														div(class='callout callout-danger')
															h5 담당업무
															ul(class='list-unstyled') !{company[i].work}
														div(class='timeline timeline-inverse')
															each detail in company[i].workDetail
																div(class='time-label')
																	span(class='bg-danger') !{detail.period}
																div
																	div(class='timeline-item')
																		h3(class='timeline-header') !{detail.project}
																		div(class='timeline-body') !{detail.contents}
		script(src='/js/jquery/jquery-3.6.1.js')
		script(src='/js/bootstrap/bootstrap.bundle.min.js')
		script(src='/js/adminLTE/adminlte.js')