doctype html
html
	head
		title='지금 꼭 가봐야 할 스마트한 여행 추천!'
		meta(http-equiv='content-type' content='text/html; charset=utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=Edge')
		meta(name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no")
		
		meta(name='description' content='지금 꼭 가봐야 할 스마트한 여행 추천!')
		meta(name='keywords' content='한국 관광 100선, 안전 여행지 등 믿을 수 있는 여행 정보부터, Tmap, SNS 등 빅데이터 분석을 통한 전국 인기 여행지')
		meta(name='subject' content='한국 관광 100선, 안전 여행지 등 믿을 수 있는 여행 정보부터, Tmap, SNS 등 빅데이터 분석을 통한 전국 인기 여행지')

		meta(property="og:type" content="website")
		meta(property="og:title" content="지금 꼭 가봐야 할 스마트한 여행 추천!")
		meta(property="og:description" content="한국 관광 100선, 안전 여행지 등 믿을 수 있는 여행 정보부터, Tmap, SNS 등 빅데이터 분석을 통한 전국 인기 여행지")
		
		link(rel='stylesheet' href='/css/fontawesome/all.min.css')
		link(rel='stylesheet' href='/css/adminLTE/adminlte.css')

		style.
			#mnthDstnAtag {
				position: absolute;
				top: 0;
				left: 0;
				height: 100%;
				width: 100%;
				color: white;
				background: url('/image/bg_dim.png') 0 0 repeat;
			}
			#mnthDstnAtag div {
				top: 40%;
				text-align: center;
				position: relative;
				text-overflow: ellipsis;
				overflow: hidden;
				white-space: nowrap;
			}
	body(class='layout-top-nav dark-mode')
		div(class='wrapper')
			nav(class='main-header navbar navbar-expand navbar-dark')
				div(class='container')
					div(class='collapse navbar-collapse order-3' id='navbarCollapse')
						ul(class='navbar-nav')
							li(class='nav-item')
								a(class='nav-link' href='/trvl') Home
							li(class='nav-item')
								a(class='nav-link' href='/trvl/hotTrvl') 인기
							li(class='nav-item')
								a(class='nav-link' href='/trvl/cosTrvl') 코스
			div(class='content-wrapper')
				div(class='content mt-1')
					div(class='container')
						div(class='row')
							div(class='col')
								div(class='card row')
									div(class='card-body')
										div(class='form-group row m-0')
											each area in contents.areaList
												button(class='btn btn-primary d-none d-sm-block' onClick='alert("'+area.code+'")' style='width:11%; border: 1px solid #000;') #{area.name}
											select(class='form-control d-block d-sm-none' onChange='alert(this.value)')
												each area in contents.areaList
													option(value=area.code) #{area.name}
									div(class='col')
										div(class='card')
											div(class='card-header')
												h3 월간 인기 여행지
											div(class='card-body row')
												each mnthDstn in contents.mnthDstnList
													div(class='col-sm-3 p-1 mb-1 bg-white' style='border: 1px solid;')
														div(class='position-relative')
															img(class='img-fluid' src='https://res.cloudinary.com/lee-m/image/upload/c_thumb,g_face,h_250,w_400/'+mnthDstn.trvl_dstn_thmb)
															a(id='mnthDstnAtag' href='alert('+mnthDstn.trvl_dstn_id+')')
																div(class='p-3')
																	b #{mnthDstn.trvl_dstn_name}
												
